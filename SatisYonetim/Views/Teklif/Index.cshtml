@model Tuple<List<Durum>, List<DurumViewModel>>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<div class="container">
  
    <div class="card">
        <div id="divHeader" class="card-header bg-info text-center bg-gradient">Teklif Listesi</div>
        <div id="divCardBody" class="card-body">
            <a asp-controller="Teklif" asp-action="Create" class="btn btn-outline-success" btn-lg>Teklif Ekle</a>
            <div class="d-flex flex-wrap">
                @foreach (var durumViewModelGroup in Model.Item2.GroupBy(d => d.DurumAdi))
                {
                    <div class="col-md-4 mb-3">
                        <div class="border">
                            <h6 class="d-flex justify-content-between align-items-center">
                                @durumViewModelGroup.Key (@durumViewModelGroup.Sum(d => d.Fiyat))
                            </h6>
                            <table class="table" border="1">
                                <thead>
                                    <tr>
                                        <th>Teklif Adı</th>
                                        <th>Müşteri Adı</th>
                                        <th>Fiyat</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var teklif in durumViewModelGroup)
                                    {
                                        <tr>
                                            <td>@teklif.TeklifAdi</td>
                                            <td>@teklif.MusteriAdi</td>
                                            <td>@teklif.Fiyat</td>
                                            <td>
                                                <a onclick="return confirm('Silmek İstediğinize emin misiniz?')" asp-controller="Teklif" asp-action="Delete" asp-route-id="@teklif.TeklifId" class="btn btn-outline-danger btn-sm">Sil</a>
                                                <a onclick="('Güncellemek İstediğinize emin misiniz?)" asp-controller="Teklif" asp-action="Update" asp-route-id="@teklif.TeklifId" class="btn btn-outline-primary btn-sm">Düzenle</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-6">
        <div class="card">
            <div id="divHeader2" class="card-header bg-info text-center bg-gradient">Durum Listesi</div>
            <div id="divCardBody2" class="card-body">
                <a asp-controller="Durum" asp-action="Create" class="btn btn-outline-success" btn-lg>Durum Ekle</a>
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Durumlar</th>
                            <th>Sıra</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var durum in Model.Item1)
                        {
                            <tr>
                                <td>@durum.DurumAdi</td>
                                <td>@durum.DurumSira</td>
                                <td>
                                    <a onclick="return confirm('Silmek İstediğinize emin misiniz?')" asp-controller="Durum" asp-action="Delete" asp-route-id="@durum.DurumId" class="btn btn-outline-danger">Sil</a>
                                    <a onclick="('Güncellemek İstediğinize emin misiniz?)" asp-controller="Durum" asp-action="Update" asp-route-id="@durum.DurumId" class="btn btn-outline-primary">Düzenle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script>
        $(".alert").slideUp(1).slideDown(1000).slideUp();

        $("#divHeader").click(function () {
            $("#divCardBody").toggle(1500, "swing");
        })
    </script>
    <script>
        $(".alert").slideUp(1).slideDown(1000).slideUp();

        $("#divHeader2").click(function () {
            $("#divCardBody2").toggle(1500, "swing");
        })
    </script>
}