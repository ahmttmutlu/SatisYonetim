@model List<Durum>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Durum Listesi";

}
<a asp-controller="Durum" asp-action="Create" class="btn btn-outline-success" btn-lg>Durum Ekle</a>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>

            <th>Durumlar</th>
            <th>Sıra</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var durum in Model)
        {
            <tr>
                <td>@durum.DurumAdi</td>
                <td>@durum.DurumSira</td>

                <td>

                    <a onclick="return confirm('Silmek İstediğinize emin misiniz?')" asp-controller="Durum" asp-action="Delete" asp-route-id="@durum.DurumId" class="btn btn-outline-danger">Sil</a>
                    <a onclick="('Güncellemek İstediğinize emin misiniz?)" asp-controller="Durum" asp-action="Update" asp-route-id="@durum.DurumId" class="btn btn-outline-primary">Düzenle</a>

                </td>

            </tr>
        }
    </tbody>
</table>
